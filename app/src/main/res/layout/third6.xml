<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- 상단 이미지 -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="337dp"
        app:srcCompat="@drawable/f_coffee"
        android:contentDescription="" /> <!-- 접근성을 위한 설명 -->

    <!-- 텍스트 정보 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_weight="1"> <!-- 여백 추가 -->

        <!-- NAME과 별점 RatingBar가 나란히 배치 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"> <!-- 텍스트와 별점 수평 배치 -->

            <!-- NAME 텍스트 -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메가커피"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp" /> <!-- 텍스트와 별점 사이 간격 조정 -->

            <!-- RatingBar (별 5개) -->
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4" />


        </LinearLayout>

        <!-- 대표 메뉴 -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="대표메뉴:커피, 카페"
            android:textSize="20sp"
            android:layout_marginTop="16dp" />

        <!-- 위치 -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위치:서울특별시 노원구 석계로 103 동우빌딩 1층"
            android:textSize="20sp"
            android:layout_marginTop="16dp" />

        <!-- 전화번호 -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전화번호:0507-1856-7509"
            android:textSize="20sp"
            android:layout_marginTop="16dp" />

        <!-- 영업시간 -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영업시간:8:00~21:45"
            android:textSize="20sp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- 하단 버튼 (왼쪽 아래에 배치) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="start|bottom"> <!-- 버튼을 왼쪽 하단에 배치 -->

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전 화면"
            android:layout_gravity="start" />
    </LinearLayout>

</LinearLayout>
